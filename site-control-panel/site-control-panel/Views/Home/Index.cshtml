@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Site-Control-Panel</h1>
    <div class="card" style="margin-left:250px; margin-right:250px; margin-top:50px">
        <div class="card-body" >
            <h5 class="card-title" style="margin-bottom:50px">Sign In</h5>

            <div class="mb-3 row">
                <label for="username" class="col-sm-5 col-form-label">Username:</label>

                <div class="col-sm-5">
                    <input type="text" class="form-control" id="username">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="password" class="col-sm-5 col-form-label">Password:</label>

                <div class="col-sm-5">
                    <input type="password" class="form-control" id="password">

                    <div class="form-check" style="margin-top:10px">
                        <input class="form-check-input" type="checkbox" id="togglePassword">
                        <label class="form-check-label" for="togglePassword" style="font-size:small">
                            Show password
                        </label>
                    </div>
                </div>
            </div>

            <div>
                <button type="button" class="btn btn-primary">Log in</button>
            </div>


        </div>
    </div>
</div>
