    Layout = null; ;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">


    <title>RMeX SCP</title>
        <style>
            .sidebar {
                position: fixed;
                top: 0;
                bottom: 0;
                left: 0;
                z-index: 1000;
                padding: 20px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                max-width:350px;
            }

            .nav-link:hover {
                background-color: #d9edfa; 
                color: #fff; 
            }

            .main-content {
                margin-left: 220px; 
            }

        </style>
</head>
<body>
        <div class="container-fluid">
            <div class="row">
                <aside class="col-md-2 d-none d-md-block bg-primary bg-opacity-10 sidebar">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                            <a class="nav-link active" href="/Dashboard/IsConfiguration" style="font-size:large">
                                <i style="font-size:30px" class="bi bi-hdd-network"></i> <b>iSeries configuration</b>
                                </a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" href="/Dashboard/serverConfiguration" style="font-size:large">
                                <i style="font-size:30px" class="bi bi-person-gear"></i>  <b>Server Configuration</b>
                                </a>
                            </li>
                        </ul>
                        <ul>
                            <li class="nav-item">
                                <a class="nav-link" href="/home" style="font-size: large">
                                    <i style="font-size: 30px" class="bi bi-box-arrow-right"></i> <b>Logout</b>
                                </a>
                            </li>
                        </ul>
                    </div>
                </aside>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

                    <div style="margin-bottom:25px; margin-top:25px">
                        <h4>i-series Configuration Settings</h4>
                    <form>
                        <div class="form-row">
                            <div class="form-group col-sm-2" style="margin-bottom:10px">
                                <label for="ipAddress">AS400 IP</label>
                                <input type="text" class="form-control" id="ipAddress" placeholder="IP">
                            </div>
                            <div class="form-group col-sm-2" style="margin-bottom:10px">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" id="username" placeholder="Username">
                            </div>
                            <div class="form-group col-sm-3" style="margin-bottom:10px">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" placeholder="Password">
                            </div>
                            <div style="margin-left:20px; margin-top:40px">
                                <input class="form-check-input form-group" type="checkbox" id="togglePassword" style="margin-left:2px">
                                <label for="togglePassword" style="font-size:medium; margin-left:20px ">
                                    Show password
                                </label>
                            </div>
                            
                        </div>
                        <div class="form-row" style="margin-top:5px;">
                            <div style="margin-right:10px">
                                <button type="button" class="btn btn-primary" style="margin-top:5px">Save Connection Details</button>
                            </div>
                            <div >
                                <button type="button" class="btn btn-success" style="margin-top:5px">Check Connection</button>
                            </div>
                        </div>
                    </form>
                    </div>

                    <div style="margin-bottom:25px; margin-top:25px">
                        <h4>Add Client Settings</h4>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-sm-2" style="margin-bottom:10px">
                                    <label for="clientid">Client ID</label>
                                    <input type="text" class="form-control" id="clientid" placeholder="Enter Client ID">
                                </div>
                                <div class="form-group col-sm-4" style="margin-bottom:10px">
                                    <label for="library">Library List</label>
                                    <input type="text" class="form-control" id="library" placeholder="Select Libraries">
                                </div>
                                <div class="form-group col-sm-4 checkbox-group">
                                    <label>Select Libraries:</label>
                                    <label><input type="checkbox" value="MPP"> MPP</label>
                                    <label><input type="checkbox" value="Mobile Suite"> Mobile Suite</label>
                                    <label><input type="checkbox" value="Call History"> Call History</label>
                                    <label><input type="checkbox" value="ScanDocs"> ScanDocs</label>
                                </div>
                            </div>
                            <div style="margin-top:5px;">
                                <button type="button" class="btn btn-primary">Save Client</button>
                            </div>
                        </form>
                    </div>

                    <div>
                    <h4>Clients</h4>
                    <table class="table table-striped table-bordered datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Client ID</th>
                                    <th scope="col" data-orderable="false">Library List</th>
                                    <th scope="col" data-orderable="false">MPP Status</th>
                                    <th scope="col" data-orderable="false">Mobile Suite</th>
                                    <th scope="col" data-orderable="false">Call History</th>
                                    <th scope="col" data-orderable="false">Scan Docs</th>
                                    <th scope="col" data-orderable="false">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                <th scope="row">SCDATAAD</th>
                                    <td>SCDATAAD ISYSAD SCMODAD SCLIBH SCFIX SCLIB</td>
                                    <td>Inactive</td>
                                    <td>Inactive</td>
                                    <td>Inactive</td>
                                    <td>Inactive</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" style="margin-top:5px">Edit</button>
                                    <button type="button" class="btn btn-danger" style="margin-top:5px">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">SCDATAFS</th>
                                    <td>SCDATAFS ISYSFS SCMODFS SCLIBH SCFIX SCLIB</td>
                                    <td>Inactive</td>
                                    <td>Inactive</td>
                                    <td>Inactive</td>
                                    <td>Inactive</td>
                                    <td>

                                    <button type="button" class="btn btn-primary" style="margin-top:5px">Edit</button>
                                    <button type="button" class="btn btn-danger" style="margin-top:5px">Delete</button>
                                    </td>
                                </tr>
            
                            </tbody>
                        </table>
                    </div>
            
                </main>
             </div>
        </div>

        <footer class="border-top footer text-muted"
                style="
                background-color:#002c60;
                position: fixed;
                height: 50px;
                bottom: 0px;
                left: 0px;
                right: 0px;
                margin-bottom: 0px;
                margin-left:350px;
        ">
            <div class="container">
            2023 <a href="http://www.quantrax.com">Quantrax Corporation  &copy;</a>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

</body>
</html>